<%= link_to "Home", root_path %>
<h1>Prices</h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Url image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
        <!--- Convertendo os valores para DÃ³lar com 2 casa e utilizando os IDs para percorrer o Array --->
        <td><%= number_to_currency(@prices[coin.id - 1])  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

